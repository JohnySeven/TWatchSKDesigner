<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Name="Window" SizeToContent="WidthAndHeight"
        x:Class="TWatchSKDesigner.Modals.ProgressWindow" WindowStartupLocation="CenterOwner"
        Title="Working..." SystemDecorations="BorderOnly" ShowInTaskbar="False">
  <StackPanel Spacing="10" Margin="20">
    <Label Content="{Binding #Window.Tag}" />
    <ProgressBar IsIndeterminate="True" />
  </StackPanel>
</Window>
